
<div class="row">
  <div class="col-sm-4 col-sm-offset-4">
<h1>Edit creature</h1>
    <%= bootstrap_form_for @creature do |c| %>
  <%= c.text_field :name, :placeholder =>"Enter a Creature" %>
  <%= c.text_field :desc, :placeholder =>"Describe it!" %>
  <%= c.collection_check_boxes :tag_ids, @tags, :id, :name %>

  <%= c.primary :class => 'btn btn-success' %>
  <% end %>
  </div>
</div>